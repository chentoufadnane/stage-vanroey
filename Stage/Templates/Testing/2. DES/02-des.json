{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeySecret": {
            "type": "string"
        },
        "SourceVaultURL": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "DiskEncName": "[concat(resourceGroup().name,'-DiskEncSet')]",
        "SourceVaultURL": "[parameters('SourceVaultURL')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/diskEncryptionSets",
            "apiVersion": "2021-04-01",
            "name": "[variables('DiskEncName')]",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "activeKey": {
                    "keyUrl": "[reference(resourceId('Microsoft.KeyVault/vaults/keys', variables('KeyVaultName'), variables('KeyName'))).keyUriWithVersion]",
                    "sourceVault": {
                        "id": "[variables('SourceVaultURL')]"
                    }
                },
                "encryptionType": "EncryptionAtRestWithCustomerKey",
                "rotationToLatestKeyVersionEnabled": true
            }
        }
    ],
    "outputs": {}
}